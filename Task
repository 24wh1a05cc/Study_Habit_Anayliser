package hass;

public class Task {
	 String name;
	    int priority;
	    double estimatedTime;

	    public Task(String name, int priority, double estimatedTime) {
	        this.name = name;
	        this.priority = priority;
	        this.estimatedTime = estimatedTime;
	    }

	    @Override
	    public String toString() {
	        return name + " (Priority: " + priority + ", Time: " + estimatedTime + " hrs)";
	    }

}
